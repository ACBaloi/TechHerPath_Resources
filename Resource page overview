  <script>
    // ======= Simple Search & Filter Logic (with feature buttons) =======
    const inputs = {
      searchDesktop: document.getElementById('searchInputForm'),
      searchMobile: document.getElementById('searchInput'),
      type: document.getElementById('typeSelect'),
      cost: document.getElementById('costSelect'),
      level: document.getElementById('levelSelect')
    };

    const resources = Array.from(document.querySelectorAll('.resource-item'));
    const emptyState = document.getElementById('emptyState');
    const resultsCount = document.getElementById('resultsCount');
    const clearBtn = document.getElementById('clearFilters');
    const featureButtons = Array.from(document.querySelectorAll('#featureList li'));

    function normalize(v){return (v||'').toString().toLowerCase().trim();}

    // store currently active feature filter (all|featured|free|scholarship)
    let activeFeature = 'all';

    function applyFilters(){
      const q = normalize(inputs.searchDesktop.value || inputs.searchMobile.value);
      const type = normalize(inputs.type.value);
      const cost = normalize(inputs.cost.value);
      const level = normalize(inputs.level.value);

      let visible = 0;
      resources.forEach(item =>{
        const title = normalize(item.querySelector('h2').textContent);
        const desc = normalize(item.querySelector('p').textContent);
        const t = normalize(item.dataset.type);
        const c = normalize(item.dataset.cost);
        const l = normalize(item.dataset.level);
        const feature = normalize(item.dataset.feature || '');

        const matchesQuery = q === '' || title.includes(q) || desc.includes(q);
        const matchesType = (type === 'all') || (t === type);
        const matchesCost = (cost === 'all') || (c === cost);
        const matchesLevel = (level === 'all') || (l === level);

        // feature logic: if activeFeature is 'all' accept, otherwise item must have matching feature
        const matchesFeature = (activeFeature === 'all') || (feature === activeFeature) || (activeFeature === 'free' && c === 'free');

        const show = matchesQuery && matchesType && matchesCost && matchesLevel && matchesFeature;
        item.style.display = show ? 'block' : 'none';
        if(show) visible++;
      });

      resultsCount.textContent = `${visible} Resources Found`;
      emptyState.style.display = visible === 0 ? 'block' : 'none';
    }

    // wire events
    [inputs.searchDesktop, inputs.searchMobile].forEach(el=>el && el.addEventListener('input', applyFilters));
    [inputs.type, inputs.cost, inputs.level].forEach(el=>el && el.addEventListener('change', applyFilters));

    clearBtn.addEventListener('click', ()=>{
      inputs.searchDesktop.value = '';
      inputs.searchMobile.value = '';
      inputs.type.value = 'all';
      inputs.cost.value = 'all';
      inputs.level.value = 'all';
      activeFeature = 'all';
      featureButtons.forEach(btn=>btn.classList.remove('active'));
      featureButtons[0].classList.add('active');
      applyFilters();
    });

    // feature buttons
    featureButtons.forEach(btn=>{
      btn.addEventListener('click', ()=>{
        featureButtons.forEach(b=>b.classList.remove('active'));
        btn.classList.add('active');
        activeFeature = btn.dataset.filter;
        applyFilters();
      });
    });

    // initialize
    applyFilters();
  </script>

